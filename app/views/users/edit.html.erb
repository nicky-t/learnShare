<div class="edit">
  <%= form_for current_user do |f| %>
    <h2>登録情報</h2>
    <div class="form-group">
      <div class="col-lg-6">
        <%= f.text_field :nickname, placeholder: "ニックネーム", class: "form-control" %>
      </div>
      <div class="col-lg-6">
        <%= f.text_field :introduce, placeholder: "自己紹介", class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit "送信", class: "btn btn-primary withripple" %>
    </div>
  <% end %>
</div>