<div class="profiel">
  <div class="image-box">
    <div class="image" style="background-image: url(<%= rails_blob_path(@user.image) %>) "></div>
    <% if current_user.id == @user.id %>
      <%= link_to 'プロフィール編集', edit_user_path(current_user), class: "edit-profiel"  %>
    <% end %>
  </div>
  <div class="nickname"><%= @user.nickname %></div>
  <div class="introduce"><%= simple_format(@user.introduce) %></div>
</div>